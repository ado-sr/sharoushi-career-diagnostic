{
    "version": 2,
    "builds": [
        {
            "src": "index.html",
            "use": "@vercel/static"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "google-apps-script/**",
            "use": "@vercel/static"
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "api/*.{ts,tsx}",
            "use": "@vercel/edge"
        }
    ],
    "rewrites": [
        {
            "source": "/api/health",
            "destination": "/server/server.js"
        },
        {
            "source": "/api/twitter-user/(.*)",
            "destination": "/server/server.js"
        }
    ]
}